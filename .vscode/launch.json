	"version": "0.2.0",
	"configurations": [

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'nkmer'",
			"cargo": {
				"args": [
					"build",
					"--bin=nkmer",
					"--package=nkmer"
				],
				"filter": {
					"name": "nkmer",
					"kind": "bin"
				}
			},
			"args": ["-k", "21", "-n", "10", "--histo-max", "10000", "-o", "Thermus-thermophilus_output/Thermus-thermophilus", "data/SRR5324768_pass_1.fastq.gz"],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'nkmer'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=nkmer",
					"--package=nkmer"
				],
				"filter": {
					"name": "nkmer",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}